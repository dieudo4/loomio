%section{"role" => "region", "aria-labelledby" => "proposals"}
  %h2#proposals= t :"new_help.proposals.title"
  %p= t :"new_help.proposals.intro_html"
  %h3.anchor#starting-proposals= t :"new_help.proposals.starting_proposals.title"
  .row
    .col-sm-9
      %p= t :"new_help.proposals.starting_proposals.body.instructions_html"
    .col-sm-3
      =image_tag "create-proposal-button.png", class: "screenshot"
  .row
    .col-sm-6
      = t :"new_help.proposals.starting_proposals.body.additional_info_html"
      %h3.anchor#editing-proposals= t :"new_help.proposals.editing_proposals.title"
      %p= t :"new_help.proposals.editing_proposals.body.intro_html"
    .col-sm-6
      =image_tag "new-proposal-form.png", class: "screenshot"
  .row
    .col-sm-6
      %p= t :"new_help.proposals.editing_proposals.body.instructions_html"
    .col-sm-6
      =image_tag "proposal-screenshot.png"
  %h3.anchor#stating-positions= t :"new_help.proposals.stating_positions.title"
  .row
    .col-sm-4
      %p= t :"new_help.proposals.stating_positions.body.intro_html"
    .col-sm-8
      .positions
        =image_tag("hand-yes.png", class: "pull-left")
        %p= t(:"help.positions_agree_description").html_safe
        =image_tag("hand-abstain.png", class: "pull-left", style: "clear: both")
        %p= t(:"help.positions_abstain_description").html_safe
        =image_tag("hand-no.png", class: "pull-left")
        %p= t(:"help.positions_disagree_description").html_safe
        =image_tag("hand-block.png", class: "pull-left")
        %p= t(:"help.positions_block_description").html_safe
  .row
    .col-sm-6
      = t :"new_help.proposals.stating_positions.body.additional_info_html"
    .col-sm-6
      =image_tag "position-statements.png", class: "screenshot"
  %h3.anchor#changing-positions= t :"new_help.proposals.changing_positions.title"
  .row
    .col-sm-6
      %p= t :"new_help.proposals.changing_positions.body_html"
    .col-sm-6
      =image_tag "edit-position.png", class: "screenshot"
  %h3.anchor#setting-outcome= t :"new_help.proposals.setting_outcome.title"
  .row
    .col-sm-6
      %p= t :"new_help.proposals.setting_outcome.body_html"
    .col-sm-6
      =image_tag "outcome-statement.png", class: "screenshot"
  %h3.anchor#closing-proposals= t :"new_help.proposals.closing_proposals.title"
  .row
    .col-sm-6
      %p= t :"new_help.proposals.closing_proposals.body_html"
    .col-sm-6
      =image_tag "proposal-screenshot.png", class: "screenshot"
      =image_tag "close-proposal.png", class: "screenshot"
  %h3.anchor#previous-decisions= t :"new_help.proposals.previous_decisions.title"
  .row
    .col-sm-6
      %p= t :"new_help.proposals.previous_decisions.body_html"
    .col-sm-6
      =image_tag "previous-decisions.png", class: "screenshot"
  = render 'help/help_links'
